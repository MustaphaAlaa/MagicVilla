@{
    ViewData["Title"] = "Delete Villa";
}

@model  VillaNumberDTO


<div class="container">

    <div class="container">
        <h1>Delete Villa Number Data</h1>
        <hr />
    </div>




    <div class="container">
        <form asp-action="Delete">

            <input   type="hidden" asp-for="@Model.VillaNo" class="form-control"/>
            

            <div class=" form-group m-2">
                <label class="m-2" for="villaNo">Vill No: </label>
                <input id="villaNo" type="text" asp-for="@Model.VillaNo" class="form-control" disabled/>
            </div>


            <div class=" form-group m-2">
                <label class="m-2" for="Name">Special Details: </label>
                <input id="Name" type="text" asp-for="@Model.SpecialDetails" class="form-control" disabled/>
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="Villa">Villa: </label>
                <input type="text" value="@Model.Villa.Name" disabled> 
                 
                
            </div>



            <div class=" d-flex justify-content-between m-5">
                <a class="btn btn-outline-primary" asp-action="Index" asp-controller="VillaNumber"> &larr; Back To List</a>

                <input type="submit" class="btn btn-danger" value="Delete" />
            </div>

        </form>
    </div>




</div>