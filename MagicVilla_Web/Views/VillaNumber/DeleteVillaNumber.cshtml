@{
    ViewBag.Title = "Update Villa";
}

@model VillaDTO
 

<div class="container">

    <div class="container">
        <h1>Delete Villa</h1>
        <hr />
    </div>




    <div class="container">
        <form asp-action="Delete" asp-controller="villa" method="post">

            <input type="hidden" asp-for="Id" />

            <div class=" form-group m-2">
                <label class="m-2" for="Name">Name: </label>
                <input id="Name" type="text" asp-for="Name" class="form-control" disabled />
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="Details">Details: </label>
                <textarea id="Details" class="form-control" asp-for="Details" disabled> </textarea>
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="Amenity">Amenity: </label>
                <textarea id="Amenity" class="form-control" asp-for="Amenity" disabled></textarea>
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="ImgUrl">Image Url: </label>
                <textarea id="ImgUrl" class="form-control" asp-for="ImageUrl" disabled></textarea>
            </div>


            <div class=" form-group m-2">
                <label class="m-2" for="Sqft">Sqft: </label>
                <input id="Sqft" type="number" asp-for="Sqft" class="form-control" disabled />
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="Rate">Rate: </label>
                <input id="Rate" type="number" asp-for="Rate" class="form-control" disabled />
            </div>

            <div class=" form-group m-2">
                <label class="m-2" for="Occupancy">Occupancy: </label>
                <input id="Occupancy" type="number" asp-for="Occupancy" class="form-control" disabled />
            </div>
            <div class=" d-flex justify-content-between">
                <a class="btn btn-outline-primary" asp-action="Index" asp-controller="Villa"> &larr; Back To List</a>

                <input type="submit" class="btn btn-danger" value="Delete" />

            </div>
        </form>
    </div>




</div>