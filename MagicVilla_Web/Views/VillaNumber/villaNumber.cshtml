@model VillaNumberDTO;
@{
    ViewData["Title"] = "Villa Number";
    var CompareCreateWithUpdateDate =
        Model.CreatedAt.Value.Year == Model.UpdatedAt.Value.Year
        &&
        Model.CreatedAt.Value.Month == Model.UpdatedAt.Value.Month
        &&
        Model.CreatedAt.Value.Day == Model.UpdatedAt.Value.Day
        &&
        Model.CreatedAt.Value.Hour == Model.UpdatedAt.Value.Hour
        &&
        Model.CreatedAt.Value.Minute == Model.UpdatedAt.Value.Minute;
}



<div class="container">
    <div class="container">
        <a asp-action="Index" asp-controller="VillaNumber" class="btn btn-outline-light"> &larr; Villa Numer List </a>
    </div>

    <div class="text-center ">
        <h1 class="display-4">@Model.Villa.Name</h1>
    </div>

    <hr />
    <div class="container w-75 p-3">
       
     
        <div class="row">
            <div class="col-3 font-weight-bold align-content-center text-center bg-light text-black">
                <p>Title</p>
            </div>
            <div class="col-9 text-center  ">
                <a 
                    asp-action= "GetById"
                    asp-controller="VillaNumber"
                    asp-route-id ="@Model.Villa.Id">
                    @Model.Villa.Name
                </a>
            </div>
        </div>
    
        <div class="row">
            <div class="col-3 font-weight-bold align-content-center text-center ">
                <p>Villa Number</p>
            </div>
            <div class="col-9 text-center   bg-light text-black">
                <p>@Model.VillaNo</p>
            </div>
        </div>


        <div class="row">
            <div class="col-3 font-weight-bold align-content-center text-center  bg-light text-black">
                <p>Special Details:</p>
            </div>
            <div class="col-9 text-center  ">
                <p>@Model.SpecialDetails</p>
            </div>
        </div>

        <div class="row">
            <div class="col-3 font-weight-bold align-content-center  ">
                <p>Created At:</p>
            </div>
            <div class="col-9 text-center   bg-light text-black ">
                <p>@Model.CreatedAt</p>
            </div>
        </div>
    
        <div class="row">
            <div c class="col-3 font-weight-bold align-content-center text-center bg-light text-black">
                <p>UpdatedAt</p>
            </div>
            <div class="col-9 text-center  ">
                
                 
                @if (CompareCreateWithUpdateDate  )
                {
                    <p>-</p>
                }
                else
                {
                    <p>@Model.UpdatedAt</p>
                }

            </div>
        </div> 
    </div>
</div>



<td class="d-flex  justify-content-center">

    <a class="btn btn-warning text-white "
       asp-controller="VillaNumber"
       asp-action="UpdateVillaNumber"
       asp-route-id="@Model.VillaNo">

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-repeat" viewBox="0 0 16 16">
            <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41m-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9" />
            <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5 5 0 0 0 8 3M3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9z" />
        </svg>

    </a>


    <a class="btn btn-danger text-white "
       asp-controller="VillaNumber"
       asp-action="DeleteVillaNumber"
       asp-route-id="@Model.VillaNo">

        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
            <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
        </svg>
    </a>




</td>

