@model IEnumerable<VillaDTO>

@{
    ViewData["Title"] = "Home Page";
    var cardsInTheDiv = 0;
}

 @section CoverImg
 {
     <div class="w-100 h-75 p-3 ">

        <img
            alt="Villa Image Cover"
            src="https://plus.unsplash.com/premium_photo-1661954372617-15780178eb2e?q=80&w=2060&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
            class="w-100 h-100 rounded" />

     </div>
 }




 <div class="container w-75 row m-auto">

    @foreach(var item in Model ){

        @if (cardsInTheDiv >= 2)
        {
            <div class="w-100"></div>
        }

        <div class="card col m-2 p-1 bg-light bg-opacity-10"  >
                <img class="card-img-top" src="@item.ImageUrl" alt="Card image cap">
                <div class="card-body">
                        <a
                            asp-controller = "Villa"
                            asp-action="GetById"
                            asp-route-id = "@item.Id">

                            <h5 class="card-title">@item.Name</h5>

                        </a>
                    <p class="card-text">@item.Details</p>
                </div>
             </div>

         {
            cardsInTheDiv  =  cardsInTheDiv >=2 ? 1 : cardsInTheDiv+1; 
         }

     }
 </div>